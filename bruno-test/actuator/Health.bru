meta {
  name: Server Health
  type: http
  seq: 1
}

get {
  url: {{host}}/actuator/health
  body: none
  auth: none
}

vars:post-response {
  disk: res.body.components.diskSpace
}

assert {
  res.status: eq 200
  res.body.status: eq UP
  disk.status: eq UP
  disk.details.total: isNumber
  disk.details.free: gt 0
}
